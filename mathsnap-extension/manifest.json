{
  "manifest_version": 3,
  "name": "MathSnap AI",
  "version": "1.0.0",
  "description": "Solve any math problem instantly with AI-powered image recognition and step-by-step solutions",

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],

  "background": {
  "service_worker": "background.js"
  },


  "host_permissions": [
    "https://api.anthropic.com/*",
    "https://api.openai.com/*"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["assets/*", "settings.html", "success.html"],
      "matches": ["<all_urls>"],
      "type": "generic"
    }
  ],

  "externally_connectable": {
    "matches": [
      "*://*.github.io/*"
    ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],

  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
